<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <RelativeLayout
        android:id="@+id/relative_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_header_" >

        <ImageButton
            android:id="@+id/btn_addTo_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_addcart" />

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="2dp"
            android:background="@android:color/transparent"
            android:src="@drawable/img_logo" />

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back_arrow" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_retailer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_header"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="RETAILERS"
        android:textColor="@color/color_login"
        android:textSize="26sp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txt_retailer" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="CALIFORNIA"
                android:textColor="@color/color_maroon"
                android:textSize="22sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txt_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/color_maroon"
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txt_title_canada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_address"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="CANADA"
                android:textColor="@color/color_maroon"
                android:textSize="22sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txt_address_canada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_title_canada"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/color_maroon"
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txt_title_florida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_address_canada"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="FLORIDA"
                android:textColor="@color/color_maroon"
                android:textSize="22sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txt_address_florida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_title_florida"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/color_maroon"
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txt_title_we"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_address_florida"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="We Are Yoga"
                android:textColor="@color/color_maroon"
                android:textSize="22sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txt_address_we"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_title_we"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/color_maroon"
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txt_title_pulse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_address_we"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="Pulse 163"
                android:textColor="@color/color_maroon"
                android:textSize="22sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txt_address_pulse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_title_pulse"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/color_maroon"
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txt_title_ambu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_address_pulse"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="AMBU Yoga"
                android:textColor="@color/color_maroon"
                android:textSize="22sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txt_address_ambu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_title_ambu"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/color_maroon"
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txt_title_hawaii"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_address_ambu"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="HAWAII"
                android:textColor="@color/color_maroon"
                android:textSize="22sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txt_address_hawaii"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_title_hawaii"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/color_maroon"
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txt_title_maine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_address_hawaii"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="MAINE"
                android:textColor="@color/color_maroon"
                android:textSize="22sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txt_address_maine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_title_maine"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/color_maroon"
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txt_title_seattle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_address_maine"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="SEATTLE"
                android:textColor="@color/color_maroon"
                android:textSize="22sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txt_address_seattle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_title_seattle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/color_maroon"
                android:textSize="20sp"
                android:textStyle="italic" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>